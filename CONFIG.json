        "ftc_doj_gov": { "enabled": true, "note": "Merger review press releases" },
        "congress_gov": { "enabled": true, "note": "Bill status, vote schedules" },
        "clark_street_value": { "enabled": true, "note": "Liquidation/micro-cap analysis" },
        "finviz_insider": { "enabled": true, "note": "Quick insider filtering" },
        "spactrack": { "enabled": true, "note": "SPAC trust values" },
        "cefconnect": { "enabled": true, "note": "CEF NAV discounts" }
      },
      "paid": {
        "inside_arbitrage": { "enabled": false, "cost": "$299/yr", "priority": 1, "note": "Covers 5 archetypes" },
        "stat_news": { "enabled": false, "cost": "$299/yr", "priority": 2, "note": "PDUFA regulatory analysis" },
        "barrons": { "enabled": false, "cost": "$100-200/yr", "priority": 3, "note": "Weekly insider column" }
      }
    },
    "cache_policy": {
      "price_duration_minutes": 60,
      "financials_duration_days": 90
    }
  },
  "automation": {
    "dry_run": false,
    "auto_approve_orders": false,
    "require_confirmation": true,
    "max_positions": 10,
