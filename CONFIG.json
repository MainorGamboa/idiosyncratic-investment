      "vix_above_30": {
        "position_reduction": 0.50,
        "note": "Reduce new options positions by 50% in crisis VIX"
      },
      "hy_oas_widening_100bp": {
        "merger_arb_options": "pause",
        "note": "Pause new merger arb options when credit spreads widen"
      }
    },
    "monitoring": {
      "theta_decay_alert_pct": 0.01,
