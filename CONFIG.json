      "write_to_file": true,
      "console_output": true,
      "priority_levels": ["immediate", "daily_digest", "weekly_review"],
      "consolidate_daily": false
    }
  },
  "testing": {
    "mock_ibkr": false,
    "use_fixtures": false,
    "log_level": "INFO"
  },
  "data_quality": {
    "greeks_validation": {
      "iv_range": [0.10, 3.00],
      "delta_range_calls": [0.01, 1.00],
