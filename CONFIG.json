      "gamma_range": [0.0, 1.0],
      "vega_range": [0.0, 10.0]
    },
    "pricing_validation": {
      "max_bid_ask_spread_pct": 0.15,
      "min_bid": 0.01,
      "min_ask": 0.01
    },
    "liquidity_validation": {
      "min_open_interest": 50,
      "min_daily_volume": 10
    },
    "circuit_breaker": {
      "consecutive_failures_threshold": 3,
      "timeout_threshold_per_hour": 3,
