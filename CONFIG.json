    "price_priority": ["ibkr_paper", "stooq", "yahoo_finance"],
    "financials_priority": ["sec_api", "manual_calculation", "third_party"],
    "event_sources": {
      "free": {
        "sec_edgar": { "enabled": true, "forms": ["4", "13D", "8-K", "10"] },
        "openinsider": { "enabled": true, "note": "Form 4 aggregation, cluster detection" },
        "biopharmcatalyst": { "enabled": true, "note": "PDUFA dates, AdCom schedules" },
